{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "containerregistry": {
                "username": "$CONTAINER_REGISTRY_USERNAME",
                "password": "$CONTAINER_REGISTRY_PASSWORD",
                "address": "$CONTAINER_REGISTRY_ADDRESS"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.2",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.2",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "AzureBlobStorageonIoTEdge": {
            "settings": {
                "image": "mcr.microsoft.com/azure-blob-storage",
                "createOptions": {"HostConfig":{"PortBindings":{"11002/tcp":[{"HostPort":"11002"}]}}}
            },
            "type": "docker",
            "version": "1.0",
            "env": {
                "LOCAL_STORAGE_ACCOUNT_NAME": {
                    "value": "$BLOB_ON_EDGE_ACCOUNT_NAME"
                },
                "LOCAL_STORAGE_ACCOUNT_KEY": {
                    "value": "$BLOB_ON_EDGE_ACCOUNT_KEY"
                }
            },
            "status": "running",
            "restartPolicy": "always"
        },
          "CustomVisionModel": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.CustomVisionModel}",
              "createOptions": {"HostConfig":{"PortBindings":{"80/tcp":[{"HostPort":"11003"}]}}}
            }
          },
          "ScoreAndAnnotate": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.ScoreAndAnnotate}",
              "createOptions": {"NetworkingConfig":{"EndpointsConfig":{"host":{}}},"HostConfig":{"NetworkMode":"host","PortBindings":{"5012/tcp":[{"HostPort":"5012"}]},"Binds":["/home/username/Desktop/image_drop:/input"]}}
            },
            "env": {
              "MODEL_ENDPOINT": {
                  "value": "$MODEL_ENDPOINT"
              },
              "LOCAL_BLOB_CONN_STR": {
                  "value": "$LOCAL_BLOB_CONN_STR"
              },
              "RAW_CONTAINER": {
                  "value": "edge-raw"
              },
              "ANNOTATED_CONTAINER": {
                  "value": "edge_annotated"
              },
              "IMAGE_DIR": {
                  "value": "/input"
              }
          }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "routes": {
          "ScoreAndAnnotateEventsToUpstream": "FROM /messages/modules/ScoreAndAnnotate/outputs/Events INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "AzureBlobStorageonIoTEdge": {
      "properties.desired": {
          "deviceAutoDeleteProperties": {
              "deleteOn": true,
              "deleteAfterMinutes": 240,
              "retainWhileUploading": true
          },
          "deviceToCloudUploadProperties": {
              "uploadOn": true,
              "uploadOrder": "OldestFirst",
              "cloudStorageConnectionString": "$CLOUD_BLOB_CONN_STR",
              "storageContainersForUpload": {
                  "edge-raw": {
                      "target": "edge-raw"
                  },
                  "edge-annotated": {
                      "target": "edge-annotated"
                  }
              },
              "deleteAfterUpload": true
          }
      }
  }
  }
}